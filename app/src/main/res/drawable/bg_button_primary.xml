<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/yellow_dark" />
            <corners android:radius="@dimen/radius_size" />
        </shape>
    </item>

    <item>
        <ripple android:color="@color/yellow_light">
            <item>
                <shape>
                    <solid android:color="@color/yellow_primary" />
                    <corners android:radius="@dimen/radius_size" />
                </shape>
            </item>
        </ripple>
    </item>

</selector>

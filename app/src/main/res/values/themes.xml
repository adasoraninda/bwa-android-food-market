<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodMarketMVP" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_primary</item>
        <item name="colorPrimaryVariant">@color/yellow_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_primary</item>
        <item name="colorSecondaryVariant">@color/green_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/poppins</item>

        <item name="android:windowBackground">@color/window_background</item>

        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
    </style>

    <style name="SplashScreenStyle" parent="Theme.FoodMarketMVP">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="TitleStyle" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="TextLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ImageCornerStyle">
        <item name="cornerSize">8%</item>
    </style>

    <style name="CircleImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- EditText -->
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:minHeight">48dp</item>
        <item name="android:background">@drawable/bg_outline_primary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Toolbar -->
    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="buttonGravity">center_vertical</item>
        <item name="android:clipToPadding">false</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="contentInsetEnd">24dp</item>
        <item name="titleTextAppearance">@style/TitleToolbarStyle</item>
        <item name="subtitleTextAppearance">@style/SubTitleToolbarStyle</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
    </style>

    <style name="TitleToolbarStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubTitleToolbarStyle">
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/grey_primary</item>
    </style>

    <!-- Button Style -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonPrimaryStyle" parent="ButtonStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bg_button_primary</item>
    </style>

    <style name="ButtonSecondaryStyle" parent="ButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_button_secondary</item>
    </style>

    <!-- Tab Layout -->
    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

</resources>